---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
  <p class="flex flex-col items-center mt-10">
    <div class="text-center font-tt text-sm font-thin">{frontmatter.pubDate.toString().slice(0,10)}</div>
    <em class="font-tt text-lg text-center max-w-screen-sm mx-auto mt-4">{frontmatter.description}</em>
